@{
    string controller = ViewContext.RouteData.Values["controller"]?.ToString()!;
    Layout = controller switch {
        "home" => "_DesktopLayout",
        "setup" => "_SetupLayout",
        "settings" => "_SettingsLayout",
        "window" => "_WindowLayout",
        "fs" => "_FileSystemLayout",
        _ => "_DesktopLayout"
    };
}