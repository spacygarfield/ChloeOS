@model SignInCredentials

<partial name="_ErrorMessage" />

<form asp-action="Index" asp-controller="SignOn" id="sign-in" class="ui form menu">
    <div class="field">
        <label asp-for="Username"></label>
        <select asp-for="Username" asp-items="@(ViewData["Users"] as SelectList)" class="ui search dropdown"></select>
    </div>
    <div class="inline fields">
        <div class="input">
            <button type="button" class="ui icon button" data-tooltip="Power Off" data-position="bottom right">
                <i class="power off icon"></i>
            </button>
        </div>

        <div class="input">
            <button type="submit" class="ui animated primary button" tabindex="0">
                <div class="visible content">Next</div>
                <div class="hidden content">
                    <i class="right arrow icon"></i>
                </div>
            </button>
        </div>
    </div>
</form>